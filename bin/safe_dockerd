#!/bin/sh

MODDIR='/storage/usbdisk1/mikopbx/custom_modules/ModuleDocker';
export PATH=$PATH:$MODDIR/bin;
mkdir -p $MODDIR/db/lib_docker;
if [ ! -f /var/lib/docker ]; then
    ln -s $MODDIR/db/lib_docker /var/lib/docker;
fi

# Приоритет запуска процесса.
PRIORITY=0
# Путь и базовые параметры для запускаемого приложения.
PATHTOBIN='dockerd';
# Длительно ожидание перед новым запуском.
SLEEPSECS=4

# Транслируем переменные из командной строки.
CLIARGS="$*"

message() {
	echo "$1" >&2
	logger -t "$(basename $PATHTOBIN)" "$1"

}

run_bin()
{
	while :; do

	    nice -n $PRIORITY ${PATHTOBIN} ${CLIARGS} 2> /dev/null
		EXITSTATUS=$?

		message "worker_models_events ended with exit status $EXITSTATUS"
		if test "x$EXITSTATUS" = "x0" ; then
			message "Bin worker_models_events shutdown normally."
			sleep 30
		else
			message "worker_models_events died with code $EXITSTATUS."
		fi
		message "Automatically restarting worker_models_events."
		sleep $SLEEPSECS

	done
}

run_bin &